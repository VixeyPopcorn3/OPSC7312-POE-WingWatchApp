<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wingwatch_background"
    tools:context=".NewSightPage">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="20sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/HotspotDetsHtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/lily_script_one"
                android:text="New Sighting"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="60sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/SpeciesNameLay"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/HotspotDetsHtxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/speciesHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Species Name:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/SpeciesNameEtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#00FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/architects_daughter"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/HotspotLay"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/SpeciesNameLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/HotspotHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text=" Hotspot:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/HotspotEtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#00FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/architects_daughter"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BehaviourLay"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/HotspotLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BehaviourHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text=" Behaviour:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/BehaviourEtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#00FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/architects_daughter"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/NotesLay"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:layout_below="@id/BehaviourLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NotesHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text=" Notes:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/NotesEtxt"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/architects_daughter"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="italic" />
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CurrentLay"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/NotesLay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/edit_text_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CurrentHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Is this Sighting at Current Location?"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/YesCurrentcheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/architects_daughter"
                    android:text="Yes"
                    android:textColor="#000000" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/Savebtn"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="28sp" />

</RelativeLayout>